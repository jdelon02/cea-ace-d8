    "require-dev": {
        "behat/behat": "3.*",
        "behat/mink": "^1.7",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "^1.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
        "dmore/behat-chrome-extension": "^1.3",
        "drupal/coder": "^8.3.1",
        "drupal/drupal-extension": "~3",
        "genesis/behat-fail-aid": "^2.1",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "mikey179/vfsstream": "^1.2",
        "phpunit/phpunit": "^4.8",
        "squizlabs/php_codesniffer": "^3.4.0",
        "symfony/css-selector": "^2.8"
    },
    "conflict": {
            "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev"
        ],
        "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
        "code-sniff": [],
        "unit-test": "echo 'No unit test step defined.'",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-create-project-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "web/private/scripts/quicksilver/{$name}/": ["type:quicksilver-script"]
        },
        "installer-types": ["bower-asset", "npm-asset"],
        "patches": {
            "drupal/core" : {
                "https://www.drupal.org/project/drupal/issues/3056458" : "https://www.drupal.org/files/issues/2019-10-24/check-for-book-before-adding-elements-3056458-14.patch",
                "https://www.drupal.org/project/drupal/issues/2925890" : "https://www.drupal.org/files/issues/2018-09-26/2925890-10.patch"
            },
            "drupal/addtocalendar" : {
                "https://www.drupal.org/project/addtocalendar/issues/2933947" : "https://www.drupal.org/files/issues/allow_alter_do_not_override_enddate.patch"
            },
            "drupal/commerce_shipping" : {
                "https://www.drupal.org/project/commerce_shipping/issues/2918482" : "https://www.drupal.org/files/issues/2020-01-15/2918482-28.patch"
            },
            "drupal/rules" : {
                "https://www.drupal.org/project/rules/issues/2800749#comment-13735508" : "https://www.drupal.org/files/issues/2020-07-06/2800749-48.upcast.patch"
            },
            "drupal/webform_content_creator" : {
                "https://www.drupal.org/project/webform_content_creator/issues/3157592" : "https://www.drupal.org/files/issues/2020-07-07/webform_content_creator-additional-layouts.patch"
            },
            "drupal/rabbit_hole" : {
                "https://www.drupal.org/project/rabbit_hole/issues/2299561" : "https://www.drupal.org/files/issues/2020-09-01/2299561-8-rh-eck.patch"
            },
            "drupal/domain_site_settings" : {
                "https://www.drupal.org/project/domain_site_settings/issues/3126737" : "https://www.drupal.org/files/issues/2020-06-20/3126737-8.patch"
            },
            "drupal/domain_theme_switch" : {
                "https://www.drupal.org/project/domain_theme_switch/issues/3126750" : "https://www.drupal.org/files/issues/2020-04-26/domain_theme_switch-use_entity_type_manager-3126750-3.patch"
            }
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
            "includes": [
                "sites/default/default.services.pantheon.preproduction.yml",
                "sites/default/settings.pantheon.php"
            ],
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".htaccess",
                "web.config"
            ]
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.2"
        }
    }
}
